<h1>Edit List</h1>
<form method="post" action="/tasks/<%= @task.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
<input type="text" name="title" value="<%= @task.title %>" placeholder="<%= @task.title %>"><br>
<input type="text" name="description" value="<%= @task.description %>" placeholder="<%= @task.description%>"><br>
<input class="btn btn-primary" type="submit" name="edit" value="Edit">
</form>